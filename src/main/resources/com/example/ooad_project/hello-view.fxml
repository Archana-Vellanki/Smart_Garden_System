<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.StackPane?>
<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ooad_project.GardenUIController">
    <!-- Main UI Layout -->
    <AnchorPane fx:id="anchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="641.0" prefWidth="1187.0">
        <children>
            <!-- VBox for centering the GridPane -->
            <VBox alignment="CENTER" prefHeight="641.0" prefWidth="1187.0" spacing="10" >
                <HBox alignment="CENTER" spacing="10">
                    <GridPane fx:id="gridPane" gridLinesVisible="true"
                              style=" -fx-background-color: rgba(144, 238, 144, 0.5);">
                        <!-- Column and Row constraints will be added dynamically in the controller -->
                    </GridPane>
                </HBox>
            </VBox>

            <!-- VBox for the day label at the top left -->
            <VBox alignment="CENTER" spacing="10"
                  AnchorPane.topAnchor="10.0"
                  AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0">

                <HBox alignment="CENTER" spacing="10">
                    <Label fx:id="currentDay" text="Day: 0"
                           style="
                 -fx-background-color: rgba(255,255,255,0.7);
                 -fx-padding: 8 12;
                 -fx-border-radius: 10;
                 -fx-background-radius: 10;
                 -fx-font-size: 18;
                 -fx-text-fill: #333;
                 -fx-font-weight: bold;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 4, 0, 2, 2);
               " />
                </HBox>
            </VBox>



            <!-- Circular Menu Buttons - positions will be set in the controller -->
            <MenuButton fx:id="treeMenuButton"
                        text="Tree"
                        prefHeight="60.0"
                        prefWidth="60.0"
                        style="-fx-background-radius: 30px; -fx-background-color: #2E8B57; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 0;"/>

            <MenuButton fx:id="flowerMenuButton"
                        text="Flower"
                        prefHeight="60.0"
                        prefWidth="60.0"
                        style="-fx-background-radius: 30px; -fx-background-color: #FF69B4; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 0;"/>

            <MenuButton fx:id="vegetableMenuButton"
                        text="Veg"
                        prefHeight="60.0"
                        prefWidth="60.0"
                        style="-fx-background-radius: 30px; -fx-background-color: #FF8C00; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 0;"/>

            <VBox layoutY="20.0" spacing="5" AnchorPane.leftAnchor="20.0">
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="WEATHER">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Text>
                <Label fx:id="rainStatusLabel" text="Sunny" style="-fx-font-family: serif; -fx-font-size: 25px; -fx-font-weight: bold; -fx-text-fill: green;"/>
            </VBox>

            <VBox layoutY="230.0" spacing="5" AnchorPane.leftAnchor="20.0">
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="TEMPERATURE">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Text>
                <Label fx:id="temperatureStatusLabel" text="Optimal" style="-fx-font-family: serif; -fx-font-size: 25px; -fx-font-weight: bold; -fx-text-fill: green;"/>
            </VBox>

            <VBox layoutY="500.0" spacing="5" AnchorPane.leftAnchor="20.0">
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="PARASITE">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Text>
                <Label fx:id="parasiteStatusLabel" text="No Parasites" style="-fx-font-family: serif; -fx-font-size: 25px; -fx-font-weight: bold; -fx-text-fill: green;"/>
            </VBox>
        </children>
    </AnchorPane>
</StackPane>